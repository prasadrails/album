<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>

  <dt><strong><%= model_class.human_attribute_name(:last_sign_in_at) %>:</strong></dt>
  <dd><%= @user.last_sign_in_at %></dd>

</dl>

<div class="form-actions">

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_registration_path, :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

  <div class="row span10">
    <% @albums.each do |album| %>
      <div class="col-sm-4 col-md-2 top20 span3" >
        <div class="thumbnail">
          <%= link_to image_tag(album.photos.first.image.url(:medium), size: "200x200", alt: album.photos.first.tag_line), album %>
        </div>

        <div class="caption">
          <p>

            <%= album.name %>
            <span class="pull-right">
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_album_path(album), :class => 'btn btn-primary' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      album_path(album),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-primary btn-danger' %>
            </span>
          </p>
        </div>


      </div>
    <% end -%>
  </div>

  <div calss="clear-fix"></div>
  <br/>