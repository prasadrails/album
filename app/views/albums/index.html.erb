<%- model_class = Album -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="row span11">
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_album_path, :class => 'btn btn-primary pull-right' %>
</div>


  <div class="row span11">
    <% @albums.each do |album| %>
      <div class="col-sm-4 col-md-2 top20 span3" >
        <div class="thumbnail">
          <%= link_to image_tag(album.photos.first.image, size: "200x200", alt: album.photos.first.tag_line), album %>
        </div>

        <div class="caption">
          <p>

            <%= album.name %>
            <% if album.owner == current_user %>
              <span class="pull-right">
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_album_path(album), :class => 'btn btn-primary' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        album_path(album),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-primary btn-danger' %>
              </span>
            <%end%>
          </p>
        </div>


      </div>
    <% end -%>
  </div>

  <div calss="clear-fix"></div>
  <br/>


